<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-3"></aside>
  <aside class="col-md-1">
    <%= gravitar_for(@user, size: 100) %>
  </aside>
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <% if current_user == @user %>
        <h2><%= @user.email %></h2>
      <% end %>
    </section>
  </aside>
</div>

<div class="row">
  <!-- Display User Posts -->
  <div class="col-md-6">
      <% if @user.posts_count > 0 %>
        <h3>Your Posts (<%= @user.posts_count %>)</h3>
        <ol class="microposts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
  </div>

  <!-- Display User Exercises -->
  <div class="col-md-6">
    <% if @user.exercise_count > 0 %>
      <h3>Your Exercise History (<%= @user.exercise_count %>)</h3>
      <ol class="microposts">
        <%= render @exercises %>
      </ol>
    <% end %>
  </div>
</div>