<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-2">
    <%= gravitar_for(@user, size: 100) %>
  </aside>
  <aside class="col-md-4">
    <section class="user_info">
        <h1><%= @user.name %></h1>
        <h2><%= @user.email %></h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Your Posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>