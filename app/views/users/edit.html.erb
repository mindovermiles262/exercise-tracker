<% provide(:title, "Edit") %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= render 'shared/form_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br />

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br />

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br />
      
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 top-padding-60">
  <h2>The following <strong><u>CANNOT</u></strong> be undone. <strong>Proceed with caution</strong></h2>
    <%= form_for(@user, method: :delete) do |f| %>
      <%= f.submit "Delete Account", class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete your account?' } %>
    <% end %>
  </div>
</div>